! transparency - true or false (default)
URxvt*transparent: true

! tint with any color; i.e., blue, red, tomato4, olivedrab2, etc.
!   some nice listings are at:
!     http://www.nisrv.com/drupal/?q=node/11
!     http://www.htmlgoodies.com/tutorials/colors/article.php/3478921
!URxvt*tintColor: Grey

! shading - 0 to 99 darkens, 101 to 200 lightens.
!   Dont use with tintColor; just use a darker or lighter color instead.
URxvt*shading: 80

! scrollback buffer lines - 65535 is max on most machines (64 is default)
URxvt*saveLines: 12000

! Xft: DejaVu fonts
!  Fedora/debian packages: dejavu-sans-mono-fonts/ttf-dejavu 
URxvt*boldFont: xft:DejaVu Sans Mono for Powerline:bold:pixelsize=14:antialias=true:hinting=true
URxvt*font: xft:DejaVu Sans Mono for Powerline:pixelsize=14:antialias=true:hinting=true

! Replace blue folder colors with a lighter shade for clarity. To
!  set colored folders and files within urxvt, xterm, and aterm, add
!  the following line to your ~/.bashrc ($HOME/.bashrc) file under
!  the heading "# User specific aliases and functions":
!   alias ls="ls -h --color=auto"


! Color scheme:
!Normal      Bright
!--------    -------
!0 Black      8 Black
!1 Red        9 Red
!2 Yellow    10 Yellow
!3 Green     11 Green
!4 Blue      12 Blue
!5 Magenta   13 Magenta
!6 Cyan      14 Cyan
!7 White     15 White

URxvt*color0: Black
URxvt*color1: Dark Orange
URxvt*color2: Lime Green
URxvt*color3: Goldenrod
URxvt*color4: Dark Cyan
URxvt*color5: Dark Orchid
URxvt*color6: Teal
URxvt*color7: Floral White
URxvt*color8: Slate Grey
URxvt*color9: Orange
URxvt*color10: Lime
URxvt*color11: Gold
URxvt*color12: Cyan
URxvt*color13: Dark Orchid
URxvt*color14: Cadet Blue
URxvt*color15: Floral White

! font color (default is black)
URxvt*foreground: White

! background color (prior to tinting) (default is white)
URxvt*background: Black

! scrollbar - true (default) or false
URxvt*scrollBar: false

! scrollbar position - left=false (default) or right=true
URxvt*scrollBar_right: false

! scrollbar style - rxvt (default), plain, next, or xterm
URxvt*scrollstyle: xterm

! do not scroll with output
URxvt*scrollTtyOutput: true

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! Fade the text by the given percentage when focus is lost. This is neat, when I switch to a different window, or switch to a different machine ala synergy, it will fade the screen slightly.
URxvt*fading: 20

! Use visual bell on receipt of a bell character. Helpful to be used with inputrc and tmux.
URxvt*visualBell:  true

! Shift+ctrl to copy paste
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! Disable iso 14755 mode with shift+ctrl
URxvt.iso14755: false
URxvt.iso14755_52: false

! Perl extentions:
! clickable url
URxvt.perl-ext-common: default,matcher,font-size
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

!URxvt.colorUL: #279d9a
URxvt.matcher.rend.0: Uline Bold fg8

! Enable jumping over words
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! change font size on the fly
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
