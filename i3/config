# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+q kill

# start dmenu2 (a program launcher)
bindsym $mod+d exec dmenu_run -dim 0.6 -dc Black -h 20 -fn "DejaVu Sans Mono Nerd Font:pixelsize=14" -nb "Teal" -sb "Dark Orange" -sf Black -nf Black -p ">"

# change focus
bindsym $mod+h focus left
